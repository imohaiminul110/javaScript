<%- include('layout/header') %>


<div class="container" >
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <% if (users.length > 0) { %>           
                <table class="table table-striped text-center">
                    <thead> 
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((user, index)=> { %>
                        <tr>
                            <td><%= index + 1  %></td>
                            <td><%= user.name %></td>
                            <td> <%= user.email %></td>
                            <td><%= user.phone %></td>
                            <td><img src="<%= user.image %>" width="50"></td>
                            <td><a href=""> edit </a>
                                <a href=""> delete</a>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                    <h1>user not found</h1>

                    <% } %>
            </div>
        </div>
    </div>
    
    
    
</div>